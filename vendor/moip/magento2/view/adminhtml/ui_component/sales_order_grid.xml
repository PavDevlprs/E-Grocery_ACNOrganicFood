<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
            <massaction name="listing_massaction">
                <action name="orderupdate">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="type" xsi:type="string">orderupdate</item>
                            <item name="label" xsi:type="string" translate="true">Get Payment Update - Moip</item>
                            <item name="url" xsi:type="url" path="orderupdate/order/MassUpdate"/>
                            <item name="confirm" xsi:type="array">
                                <item name="title" xsi:type="string" translate="true">Get Payment Update</item>
                                <item name="message" xsi:type="string" translate="true">Consultar status dos pedidos no Moip?</item>
                            </item>
                        </item>
                    </argument>
                </action>
            </massaction>
    </listingToolbar>
</listing>